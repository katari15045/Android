<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saketh.add2numbers.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1st Number"
        android:id="@+id/TextViewOne"
        android:textSize="20sp"
        android:layout_marginTop="40dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2nd Number"
        android:id="@+id/TextViewTwo"
        android:layout_below="@+id/TextViewOne"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextOne"
        android:width="150sp"
        android:layout_above="@+id/TextViewTwo"
        android:layout_toEndOf="@+id/TextViewTwo"
        android:layout_marginStart="38dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EditTextTwo"
        android:width="150dp"
        android:layout_alignTop="@+id/TextViewTwo"
        android:layout_alignStart="@+id/EditTextOne" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/ButtonOne"
        android:layout_below="@+id/EditTextTwo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Result :"
        android:id="@+id/TextViewThree"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/ButtonOne"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
