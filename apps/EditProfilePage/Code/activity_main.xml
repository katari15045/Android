<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saketh.editprofile.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/linearLayoutUsername"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewUsername"
            android:text="Username"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testViewCurrentUsername"
            android:text="vinston9977" />

    </LinearLayout>


       <Button
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:layout_marginRight="10dp"
           android:id="@+id/buttonEditUserName"
           android:text="Edit"
           android:textAllCaps="false"
           android:background="#66c2ff"
           android:layout_alignBottom="@+id/linearLayoutUsername"
           android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/linearLayoutPassword"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPassword"
            android:text="Password"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testViewCurrentPassword"
            android:inputType="textPassword"
            android:text="Secret" />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:id="@+id/buttonEditPassword"
        android:text="Edit"
        android:textAllCaps="false"
        android:background="#66c2ff"
        android:layout_alignBottom="@+id/linearLayoutPassword"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/linearLayoutEmail"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewEmail"
            android:text="E-Mail"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testViewCurrentEmail"
            android:inputType="textEmailAddress"
            android:text="vinston@gmail.com" />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:id="@+id/buttonEditEmail"
        android:text="Edit"
        android:textAllCaps="false"
        android:background="#66c2ff"
        android:layout_alignBottom="@+id/linearLayoutEmail"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/linearLayoutPhoneNumber"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPhoneNumber"
            android:text="Phone Number"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testViewCurrentPhoneNumber"
            android:inputType="phone"
            android:text="9988776655" />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:id="@+id/buttonEditPhoneNumber"
        android:text="Edit"
        android:textAllCaps="false"
        android:background="#66c2ff"
        android:layout_alignBottom="@+id/linearLayoutPhoneNumber"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
